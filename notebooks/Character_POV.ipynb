# CHARACTER POINT-OF-VIEW ANALYSIS (Anna Karenina & War and Peace)

import re
from collections import Counter
import matplotlib.pyplot as plt
import pandas as pd
from IPython.display import display

# Paths to uploaded books
anna_path = "/content/The Project Gutenberg eBook of Anna Karenina, by Leo Tolstoy.txt"
wap_path  = "/content/The_Project_Gutenberg_eBook_of_War_and_Peace,_by_Leo_Tolstoy_1.txt"

# Load text
def load_text(path):
    with open(path, "r", encoding="utf-8", errors="ignore") as f:
        return f.read()

anna_text = load_text(anna_path)
wap_text  = load_text(wap_path)

# Split into chapters
chapter_pattern = r"\n(?:Chapter|CHAPTER)\s+[IVXLCDM\d]+\s*\n"

def split_into_chapters(text):
    m = re.search(chapter_pattern, text)
    if m:
        text = text[m.start():]
    chapters = re.split(chapter_pattern, text)
    chapters = [ch.strip() for ch in chapters if len(ch.strip()) > 500]
    return chapters

anna_chapters = split_into_chapters(anna_text)
wap_chapters  = split_into_chapters(wap_text)

print("Anna Karenina chapters:", len(anna_chapters))
print("War and Peace chapters:", len(wap_chapters))

# Aliases
anna_aliases = {
    "Anna": ["Anna"],
    "Levin": ["Levin"],
    "Vronsky": ["Vronsky"],
    "Kitty": ["Kitty"],
    "Dolly": ["Dolly", "Darya", "Darya Alexandrovna"],
    "Stiva": ["Stiva", "Stepan", "Stepan Arkadyevich", "Oblonsky"],
    "Karenin": ["Karenin", "Alexei Alexandrovich"],
    "Seryozha": ["Seryozha", "Sergey", "Sergei"],
}

wap_aliases = {
    "Pierre": ["Pierre"],
    "Andrei": ["Andrei", "Andrew", "Prince Andrei", "Prince Andrew"],
    "Natasha": ["Natasha", "Natalya"],
    "Nikolai": ["Nikolai", "Nicholas"],
    "Marya": ["Marya", "Mary", "Princess Mary"],
    "Sonya": ["Sonya", "Sonia"],
    "Anatole": ["Anatole"],
    "Helene": ["Helene", "Hélène"],
    "Rostov": ["Rostov"],
    "Bolkonsky": ["Bolkonski", "Bolkonsky"],
    "Kutuzov": ["Kutuzov"],
}

# Count per chapter
def character_counts_per_chapter(chapters, alias_dict):
    all_chapter_counts = []
    for ch in chapters:
        counts = Counter()
        for canon, aliases in alias_dict.items():
            total = 0
            for alias in aliases:
                pattern = r"\b" + re.escape(alias) + r"\b"
                total += len(re.findall(pattern, ch, flags=re.IGNORECASE))
            counts[canon] = total
        all_chapter_counts.append(counts)
    return all_chapter_counts

anna_counts_by_chapter = character_counts_per_chapter(anna_chapters, anna_aliases)
wap_counts_by_chapter  = character_counts_per_chapter(wap_chapters,  wap_aliases)

# Dominant POV
def dominant_pov(chapter_counts):
    pov_list = []
    for counts in chapter_counts:
        total = sum(counts.values())
        pov_list.append("None" if total == 0 else counts.most_common(1)[0][0])
    return pov_list

anna_pov = dominant_pov(anna_counts_by_chapter)
wap_pov  = dominant_pov(wap_counts_by_chapter)

# Totals
def total_counts(chapter_counts):
    total = Counter()
    for counts in chapter_counts:
        total.update(counts)
    return total

anna_total_counts = total_counts(anna_counts_by_chapter)
wap_total_counts  = total_counts(wap_counts_by_chapter)

print("\nAnna Karenina – total character mentions:")
print(anna_total_counts)

print("\nWar and Peace – total character mentions:")
print(wap_total_counts)

# POV overview table
def pov_dataframe(chapters, chapter_counts, pov_list):
    rows = []
    for i, (text, counts, pov) in enumerate(zip(chapters, chapter_counts, pov_list), start=1):
        total_mentions = sum(counts.values())
        top3 = ", ".join([f"{name}:{cnt}" for name, cnt in counts.most_common(3)])
        rows.append({
            "chapter": i,
            "dominant_character": pov,
            "total_mentions_in_chapter": total_mentions,
            "top3_characters_in_chapter": top3
        })
    return pd.DataFrame(rows)

print("\nAnna Karenina – POV (first 20 chapters):")
display(pov_dataframe(anna_chapters, anna_counts_by_chapter, anna_pov).head(20))

print("\nWar and Peace – POV (first 20 chapters):")
display(pov_dataframe(wap_chapters,  wap_counts_by_chapter,  wap_pov).head(20))

# POV distribution plot
def plot_pov_distribution(pov_list, title):
    pov_counts = Counter(pov_list)
    labels = list(pov_counts.keys())
    values = [pov_counts[l] for l in labels]
    plt.figure(figsize=(10, 5))
    plt.bar(labels, values)
    plt.title(title)
    plt.xlabel("Dominant character")
    plt.ylabel("Chapters")
    plt.xticks(rotation=45)
    plt.tight_layout()
    plt.show()

plot_pov_distribution(anna_pov, "Anna Karenina – POV Distribution")
plot_pov_distribution(wap_pov,  "War and Peace – POV Distribution")

# Total mentions plot
def plot_total_mentions(total_counts, title):
    labels = list(total_counts.keys())
    values = [total_counts[l] for l in labels]
    plt.figure(figsize=(10, 5))
    plt.bar(labels, values)
    plt.title(title)
    plt.xlabel("Character")
    plt.ylabel("Mentions")
    plt.xticks(rotation=45)
    plt.tight_layout()
    plt.show()

plot_total_mentions(anna_total_counts, "Anna Karenina – Total Mentions")
plot_total_mentions(wap_total_counts,  "War and Peace – Total Mentions")

# POV timeline
def plot_pov_timeline(pov_list, title):
    unique_chars = sorted(set(pov_list))
    mapping = {name: idx for idx, name in enumerate(unique_chars)}
    y = [mapping[name] for name in pov_list]
    plt.figure(figsize=(12, 4))
    plt.scatter(range(1, len(pov_list) + 1), y, s=20)
    plt.yticks(list(mapping.values()), list(mapping.keys()))
    plt.title(title)
    plt.xlabel("Chapter")
    plt.ylabel("Dominant character")
    plt.tight_layout()
    plt.show()

plot_pov_timeline(anna_pov, "Anna Karenina – POV Timeline")
plot_pov_timeline(wap_pov,  "War and Peace – POV Timeline")
