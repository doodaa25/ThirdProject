# TEMPORAL STRUCTURE & TIME REFERENCE ANALYSIS
# Anna Karenina & War and Peace 

import re
from collections import Counter, defaultdict
import matplotlib.pyplot as plt
import pandas as pd
from IPython.display import display

# Paths to the uploaded books
anna_path = "/content/The Project Gutenberg eBook of Anna Karenina, by Leo Tolstoy.txt"
wap_path  = "/content/The_Project_Gutenberg_eBook_of_War_and_Peace,_by_Leo_Tolstoy_1.txt"

# Load text
def load_text(path):
    with open(path, "r", encoding="utf-8", errors="ignore") as f:
        return f.read()

anna_text = load_text(anna_path)
wap_text  = load_text(wap_path)

# Split into chapters
chapter_pattern = r"\n(?:Chapter|CHAPTER)\s+[IVXLCDM\d]+\s*\n"

def split_into_chapters(text):
    m = re.search(chapter_pattern, text)
    if m:
        text = text[m.start():]
    chapters = re.split(chapter_pattern, text)
    chapters = [ch.strip() for ch in chapters if len(ch.strip()) > 500]
    return chapters

anna_chapters = split_into_chapters(anna_text)
wap_chapters  = split_into_chapters(wap_text)

print("Anna Karenina chapters:", len(anna_chapters))
print("War and Peace chapters:", len(wap_chapters))

# Time-related vocabulary
time_categories = {
    "parts_of_day": [
        "morning", "afternoon", "evening", "night", "midnight",
        "noon", "dawn", "dusk"
    ],
    "days_of_week": [
        "monday", "tuesday", "wednesday", "thursday",
        "friday", "saturday", "sunday"
    ],
    "months": [
        "january", "february", "march", "april", "may", "june",
        "july", "august", "september", "october", "november", "december"
    ],
    "seasons": ["spring", "summer", "autumn", "fall", "winter"],
    "relative_time": [
        "yesterday", "today", "to-day", "tomorrow", "to-morrow",
        "now", "soon", "presently", "immediately", "instantly",
        "later", "afterwards", "before", "after", "then",
        "meanwhile", "at once", "suddenly"
    ],
    "time_units": [
        "day", "days", "week", "weeks", "month", "months",
        "year", "years", "hour", "hours", "minute", "minutes",
        "moment", "moments", "instant", "instants"
    ],
}

clock_patterns = [
    r"\b\d{1,2}\s*o['’]?clock\b",
    r"\b\d{1,2}\s*(a\.m\.|p\.m\.)\b"
]

# Helpers
def tokenize_words(text):
    return re.findall(r"[A-Za-z]+", text.lower())

def count_time_keywords(text, categories, clock_patts):
    words = tokenize_words(text)
    word_counts = Counter(words)

    category_counts = defaultdict(int)
    term_counts = Counter()

    for cat, terms in categories.items():
        for t in terms:
            c = word_counts[t.lower()]
            if c > 0:
                term_counts[t] += c
                category_counts[cat] += c

    clock_total = 0
    for patt in clock_patts:
        m = re.findall(patt, text)
        clock_total += len(m)
    if clock_total > 0:
        category_counts["clock_times"] += clock_total
        term_counts["CLOCK_PATTERN"] += clock_total

    return term_counts, category_counts

def chapter_time_profile(chapters, categories, clock_patts):
    totals = []
    densities = []
    cat_per_chapter = []

    for ch in chapters:
        terms, cats = count_time_keywords(ch, categories, clock_patts)
        total_terms = sum(cats.values())
        totals.append(total_terms)

        tokens = len(tokenize_words(ch))
        density = (total_terms / tokens * 1000) if tokens > 0 else 0
        densities.append(density)
        cat_per_chapter.append(dict(cats))

    return totals, densities, cat_per_chapter

# Global stats
anna_terms, anna_cat = count_time_keywords(anna_text, time_categories, clock_patterns)
wap_terms,  wap_cat  = count_time_keywords(wap_text,  time_categories, clock_patterns)

print("\nAnna Karenina – time categories:")
print(dict(anna_cat))

print("\nWar and Peace – time categories:")
print(dict(wap_cat))

def top_terms(term_counts, n=20):
    return term_counts.most_common(n)

print("\nAnna Karenina – top terms:")
print(top_terms(anna_terms, 20))

print("\nWar and Peace – top terms:")
print(top_terms(wap_terms, 20))

# Chapter-level profiles
anna_totals, anna_densities, anna_cat_ch = chapter_time_profile(
    anna_chapters, time_categories, clock_patterns
)
wap_totals, wap_densities, wap_cat_ch = chapter_time_profile(
    wap_chapters, time_categories, clock_patterns
)

def build_time_df(chapters, totals, densities):
    rows = []
    for i, (t, d) in enumerate(zip(totals, densities), start=1):
        rows.append({
            "chapter": i,
            "time_terms_total": t,
            "time_terms_per_1000_words": d
        })
    return pd.DataFrame(rows)

print("\nAnna Karenina – first 15 chapters:")
display(build_time_df(anna_chapters, anna_totals, anna_densities).head(15))

print("\nWar and Peace – first 15 chapters:")
display(build_time_df(wap_chapters,  wap_totals,  wap_densities).head(15))

# Visualizations
def plot_category_comparison(anna_cat, wap_cat, title):
    cats = sorted(set(list(anna_cat.keys()) + list(wap_cat.keys())))
    anna_vals = [anna_cat.get(c, 0) for c in cats]
    wap_vals  = [wap_cat.get(c, 0) for c in cats]

    x = range(len(cats))
    plt.figure(figsize=(10, 5))
    plt.bar([i - 0.35/2 for i in x], anna_vals, 0.35, label="Anna Karenina")
    plt.bar([i + 0.35/2 for i in x], wap_vals,  0.35, label="War and Peace")
    plt.xticks(list(x), cats, rotation=45)
    plt.ylabel("Total time references")
    plt.title(title)
    plt.legend()
    plt.tight_layout()
    plt.show()

plot_category_comparison(anna_cat, wap_cat,
                         "Time Categories – Anna Karenina vs War and Peace")

def plot_time_density(densities, title):
    plt.figure(figsize=(12, 4))
    plt.plot(range(1, len(densities) + 1), densities, marker="o", linewidth=1)
    plt.xlabel("Chapter")
    plt.ylabel("Time references per 1000 words")
    plt.title(title)
    plt.tight_layout()
    plt.show()

plot_time_density(anna_densities, "Anna Karenina – Time Density by Chapter")
plot_time_density(wap_densities,  "War and Peace – Time Density by Chapter")

def category_share_bar(cat_counts, title):
    total = sum(cat_counts.values())
    labels = list(cat_counts.keys())
    shares = [cat_counts[c] / total * 100 if total > 0 else 0 for c in labels]

    plt.figure(figsize=(10, 5))
    plt.bar(labels, shares)
    plt.ylabel("Percentage of time references (%)")
    plt.title(title)
    plt.xticks(rotation=45)
    plt.tight_layout()
    plt.show()

category_share_bar(anna_cat, "Anna Karenina – Time Category Share")
category_share_bar(wap_cat,  "War and Peace – Time Category Share")
